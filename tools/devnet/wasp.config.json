{
  "database": {
    "directory": "/wasp/waspdb"
  },
  "logger": {
    "level": "debug",
    "disableCaller": false,
    "disableStacktrace": true,
    "encoding": "console",
    "outputPaths": [
      "stdout",
      "wasp.log"
    ],
    "disableEvents": true
  },
  "network": {
    "bindAddress": "0.0.0.0",
    "externalAddress": "auto"
  },
  "node": {
    "disablePlugins": [],
    "enablePlugins": []
  },
  "users": {
    "wasp": {
      "password": "wasp",
      "claims": ["dashboard", "api", "chain.read", "chain.write"]
    }
  },
  "webapi": {
    "auth": {
      "jwt": {
        "durationHours": 24
      },
      "basic": {
        "userName": "wasp"
      },
      "ip": {
        "whitelist": ["127.0.0.1"],
        "adminWhitelistDisabled": true
      },
      "addRoutes": true,
      "scheme": "ip"
    },
    "bindAddress": "0.0.0.0:9090"
  },
  "dashboard": {
    "auth": {
      "jwt": {
        "durationHours": 24
      },
      "basic": {
        "userName": "wasp"
      },
      "ip": {
        "whitelist": ["127.0.0.1"]
      },
      "addRoutes": true,
      "scheme": "basic"
    },
    "bindAddress": "0.0.0.0:7000"
  },
  "peering":{
    "port": 4000,
    "netid": "127.0.0.1:4000"
  },
  "nodeconn": {
    "address": "devnet_goshimmer:5000"
  },
  "nanomsg":{
    "port": 5550
  }
}
